<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#d0d0d0"
                android:endColor="#FFFFFF"
                android:angle="270" />
   <stroke
                android:width="0.85dp"
                android:color="#000000" />
            <corners
                android:radius="23dp" />
            <padding
                android:left="18dp"
                android:top="8dp"
                android:right="18dp"
                android:bottom="8dp" />
        </shape>
    </item>
 <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#000000"
                android:centerColor="#8e8e8e"
                android:endColor="#000000"
                android:angle="270" />
   <stroke
                android:width="3dp"
                android:color="#8e8e8e" />
 
   <corners
                android:radius="21dp" />
        </shape>
    </item>

</selector>
