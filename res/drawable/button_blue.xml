<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#00a7ee"
                android:endColor="#FFFFFF"
                android:angle="270" />
   <stroke
                android:width="1dp"
                android:color="#00b7ee" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="30dp"
                android:top="10dp"
                android:right="30dp"
                android:bottom="10dp" />
        </shape>
    </item>
 <item android:state_pressed="true" >
        <shape>
            <solid
    android:color="#00b7ee" />
            <stroke
                android:width="1dp"
                android:color="#2f6699" />
            <corners
    android:radius="2dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>
