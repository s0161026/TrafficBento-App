<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#FFFFFF"
                android:centerColor="#00b7ee"
                android:endColor="#FFFFFF"
                android:angle="270" />
   <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="30dp"
                android:top="15dp"
                android:right="30dp"
                android:bottom="15dp" />
        </shape>
    </item>
 

</selector>
